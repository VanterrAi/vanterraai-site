body {
  font-family: 'Arial', sans-serif;
  margin: 0;
  padding: 0;
  background-color: #000;
  color: gold;
  text-align: center;
}

header {
  padding: 40px 20px;
  border-bottom: 2px solid gold;
}

main {
  padding: 60px 20px;
}

h1 {
  font-size: 3em;
  margin: 0 0 20px;
}

p {
  font-size: 1.2em;
  color: #ccc;
}

a.btn {
  display: inline-block;
  margin-top: 30px;
  padding: 15px 30px;
  background-color: gold;
  color: #000;
  font-weight: bold;
  text-decoration: none;
  border-radius: 6px;
}

a.btn:hover {
  background-color: #ffc107;
}

footer {
  background-color: #111;
  padding: 30px 20px;
  font-size: 0.9em;
  color: #888;
}

footer a {
  color: #888;
  margin: 0 10px;
  text-decoration: none;
}
